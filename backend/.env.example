# ==============================================
# TEA MAP BACKEND - ENVIRONMENT CONFIGURATION
# ==============================================

# Database Configuration
# PostgreSQL connection string
DATABASE_URL="postgresql://username:password@localhost:5432/tea_map"
DIRECT_URL="postgresql://username:password@localhost:5432/tea_map"

# JWT Secrets (REQUIRED - MUST BE CHANGED IN PRODUCTION!)
# Generate with: openssl rand -base64 64
JWT_SECRET="CHANGE-ME-IN-PRODUCTION-USE-STRONG-SECRET"
JWT_REFRESH_SECRET="CHANGE-ME-IN-PRODUCTION-USE-DIFFERENT-SECRET"

# Session Secret (REQUIRED - MUST BE CHANGED IN PRODUCTION!)
# Generate with: openssl rand -base64 32
SESSION_SECRET="CHANGE-ME-IN-PRODUCTION-SESSION-SECRET"

# Server Configuration
PORT=3002
NODE_ENV=development

# Frontend URL for CORS
# Development:
FRONTEND_URL="http://localhost:3001"
# Production:
# FRONTEND_URL="https://teamap.duckdns.org"

# Cloudinary Configuration (Image Upload)
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Google OAuth Configuration (Optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
# Development:
GOOGLE_CALLBACK_URL="http://localhost:3002/api/auth/google/callback"
# Production:
# GOOGLE_CALLBACK_URL="https://teamap.duckdns.org/api/auth/google/callback"

# Email Configuration (Optional - for future features)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# Security Headers (Production)
# ALLOWED_ORIGINS="https://your-domain.com"
# SECURITY_HEADERS_ENABLED=true

# Logging Configuration
# LOG_LEVEL=info
# LOG_FILE=./logs/app.log

# Performance Configuration
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100